{
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "editor.formatOnSave": true,
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports.ruff": "explicit"
        },
        "editor.defaultFormatter": "charliermarsh.ruff",
    },
    "ruff.lint.args": [
        "--config=pyproject.toml"
    ],
    "ruff.interpreter": [
        "./.venv/bin/python3.11" // TODO
    ],
    "ruff.path": [
        "./.venv/bin/ruff" // TODO
    ],
    "mypy.configFile": "pyproject.toml", // Указание файла конфигурации
    "mypy.targets": [
        "src/" // Указание папки, которую анализирует MyPy
    ],
    "python.linting.enabled": true, // Включаем линтинг
    "python.linting.mypyEnabled": true // Включаем MyPy как линтер
}
